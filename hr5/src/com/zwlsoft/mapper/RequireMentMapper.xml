	<!-- 按对象条件查列表 -->
	<select id="selectListBySelected" resultType="RequireMent"
		parameterType="RequireMent">
		select
		<include refid="Select_All_Base_Column_List" />
		from require_ment
		<include refid="Where_Has_Value_Condition_Column_List" />
	</select>

	<!-- 按id查单个 -->
	<select id="selectById" resultType="RequireMent">
		select
		<include refid="Select_All_Base_Column_List" />
		from require_ment
		<include refid="Where_Id_Is" />
	</select>

	<!-- 按多个id查 -->
	<select id="selectByIds" resultType="RequireMent">
		select
		<include refid="Select_All_Base_Column_List" />
		from require_ment
		<include refid="Where_Id_In" />
	</select>

</mapper>
