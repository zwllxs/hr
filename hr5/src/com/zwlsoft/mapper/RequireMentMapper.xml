	<!-- 按id改 ,不管字段值是否为空，都全部更新 -->
	<update id="updateAllColumnById" parameterType="RequireMent">
		update require_ment
		<set>
			<include refid="Update_All_Column_List" />
		</set>
		<include refid="Where_Id_Is" />
	</update>

