<script type="text/javascript">
	var basePath = "/vst_back/pet";
</script>
<script src="/vst_back/js/file/ajaxUpload.js"></script>

<script type="text/javascript">
	 $("#uploadFile").fileUpload({
			onSubmit:function() {
				$("#uploadFile").attr("disabled", true);
			},
			onComplete:function(file,dt){
				var data=eval("("+dt+")");
				if(data.success){
					$("#uploadResult").text("上传成功");
					$("#fileName").val(data.fileName);
					$("#pid").val(data.file);
				}else{
					alert(data.msg);
				}
				$("#uploadFile").removeAttr("disabled");
			}
	 });

	//新增邮件
	$("#sendEmail").bind("click",function(){
		var contentText = $("#contentText").val();
		var fromAddress = $("#fromAddress").val();
		var fromName = $("#fromName").val();
		var subject = $("#subject").val();
		var toAddress = $("#toAddress").val();
		var pid = $("#pid").val();
		var fileName = $("#fileName").val();
		var data = {contentText:contentText,fromAddress:fromAddress,fromName:fromName,subject:subject,toAddress:toAddress,pid:pid,fileName:fileName};
		 $.ajax({
			url : "/vst_back/pet/emailSend/sendEmail.do",
			type : "post",
			data : data,
			dataType:'JSON',
			success : function(result) {
				if (result.flag=='Y') {
		     		alert("发送成功！");
		     	} else {
		     		alert("发送失败！");
		     	}
			}
		});
	});
	
</script>