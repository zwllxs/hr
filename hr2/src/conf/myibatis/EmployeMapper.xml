<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zwlsoft.mapper.EmployeMapper" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.zwlsoft.bean.Employe" >
	<result column="id" property="id"/>
	<result column="name" property="name"/>
	<result column="sex" property="sex"/>
	<result column="age" property="age"/>
	<result column="remark" property="remark"/>
</resultMap>
       
<!-- employe table all fields -->
<sql id="Base_Column_List" >
	 id,name,sex,age,remark
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and id =  #{id}
	</if>
	<if test="name != null and name != ''" >
	    and name =  #{name}
	</if>
	<if test="sex != null" >
	    and sex =  #{sex}
	</if>
	<if test="age != null" >
	    and age =  #{age}
	</if>
	<if test="remark != null and remark != ''" >
	    and remark =  #{remark}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="insert" parameterType="com.zwlsoft.bean.Employe" >
  insert into employe(id,name,sex,age,remark)
 values(#{id},#{name},#{sex},#{age},#{remark})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="com.zwlsoft.bean.Employe" >
  update employe set name=#{name},sex=#{sex},age=#{age},remark=#{remark} where id=#{id}
 </update>
 
 <!--  -->
<update id="updateBySelective" parameterType="com.zwlsoft.bean.Employe" >
	update employe set 
	<trim  suffixOverrides="," >
	<if test="name != null  and name != '' ">
		name=#{name},
	</if>
	<if test="sex != null  ">
		sex=#{sex},
	</if>
	<if test="age != null  ">
		age=#{age},
	</if>
	<if test="remark != null  and remark != '' ">
		remark=#{remark},
	</if>
	</trim> where id=#{id}
</update>

<!-- 逻辑删除，将deleted 改成 1 -->
<update id="delete" parameterType="com.zwlsoft.bean.Employe">
	delete 	 from employe where id = #{id}
</update>
 
<!-- 员工列表 -->
<select id="selectById"  resultMap="BaseResultMap" parameterType="java.lang.Long">
	select <include refid="Base_Column_List" /> 
	 from employe where id = #{id}
</select>
  	
<!-- 员工 列表总数-->
<select id="selectByModelCount" resultType="java.lang.Integer"  parameterType="com.zwlsoft.model.EmployeModel">
	select count(1) from employe 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 根据id查询员工 -->
<select id="selectByModel" resultMap="BaseResultMap"  parameterType="com.zwlsoft.model.EmployeModel">
	select 
	<include refid="Base_Column_List"/>
	from employe 
	<include refid="Example_Where_Clause"/>
	<if test="navigate.orderCondition != null and navigate.orderCondition != ''" >
      ${navigate.orderCondition}
    </if>
    ${navigate.mysqlQueryCondition}
</select>


<!-- 员工 列表总数-->
<select id="selectByMapCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(1) from employe 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 根据id查询员工 -->
<select id="selectByMap" resultMap="BaseResultMap"  parameterType="java.util.Map">
	select 
	<include refid="Base_Column_List"/>
	from employe 
	<include refid="Example_Where_Clause"/>
	<if test="orderCondition != null and queryCondition != ''" >
     order by ${orderCondition}
    </if>
    <if test="queryCondition != null and queryCondition != ''" >
      ${queryCondition}
    </if>
</select>
  	
</mapper>   
